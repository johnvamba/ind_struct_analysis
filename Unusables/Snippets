1. try Paper.js on onMouseMove; Does Panning. Absolutly works, not on large obs. :/
	// Create a circle shaped path at the center of the view:
	var path = new Path.Circle({
	    center: view.center,
	    radius: 50,
	    fillColor: 'blue'
	});

	// Install a drag event handler that moves the path along.
	path.onMouseDrag = function(event) {
		step = event.delta.x;
		if(path.isInside(view.bounds)){
			path.position.x += step;
			if(!path.isInside(view.bounds))
				path.position.x -= step;
		} 
	}

	// SUB //


	group.onMouseDrag = function(event) {
		if(Key.isDown('d')){
			if((path.bounds.left < 10 || path.bounds.right > view.bounds.right - 10) && !path.isInside(view.bounds)){
				path.position.x += event.delta.x;
				if(path.bounds.left > 10 || path.bounds.right < view.bounds.right - 10){
					path.position.x -= event.delta.x;
				}
			}
			if (path.isInside(view.bounds)){
				path.position.x = view.center.x;
			}	
		}
			
		//console.log('left:', group.bounds.left < 0,'right:', group.bounds.right > view.bounds.right);
	}

